<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nguyen.mlpost.UCIExplainFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/UCIDataSet"
            android:textSize="20sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/LearningMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/UCILearningMethod"
            android:textSize="20sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/preprocess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/UCIprocessing"
            android:textSize="20sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/Explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/UCItraining"
            android:textSize="20sp"
            android:typeface="monospace" />
    </LinearLayout>
</ScrollView>
