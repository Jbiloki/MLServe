<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.nguyen.mlpost.UCIInterface"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="129dp"
            android:layout_marginTop="64dp"
            android:textColor="@android:color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/adhesion"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

        <Button
            android:id="@+id/Request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Predict"
            app:layout_constraintRight_toLeftOf="@+id/out"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/thickness"
            app:layout_constraintHorizontal_bias="0.132"
            app:layout_constraintVertical_bias="0.195" />

        <EditText
            android:id="@+id/thickness"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_marginLeft="26dp"
            android:ems="10"
            android:hint="Clump Thickness"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.359"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <EditText
            android:id="@+id/size"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:ems="10"
            android:hint="Uniformity of Cell Size"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.461"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/shape"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.333" />

        <EditText
            android:id="@+id/shape"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_marginLeft="26dp"
            android:ems="10"
            android:hint="Uniformity of Cell Shape"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toTopOf="@+id/singlesize"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/thickness"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/adhesion"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:ems="10"
            android:hint="Marginal Adhesion"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/size"
            android:layout_marginRight="54dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/thickness"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0" />

        <EditText
            android:id="@+id/singlesize"
            android:layout_width="170dp"
            android:layout_height="51dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="422dp"
            android:ems="10"
            android:hint="Single Epithelial Cell Size"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/nuclei"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_marginTop="420dp"
            android:ems="10"
            android:hint="Bare Nuclei"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/singlesize"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.061"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/chromatin"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_marginLeft="26dp"
            android:ems="10"
            android:hint="Bland Chromatin"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/nucleoli"
            android:layout_marginRight="8dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/singlesize"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/nucleoli"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:ems="10"
            android:hint="Normal Nucleoli"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            app:layout_constraintHorizontal_bias="0.793"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/nuclei"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/mitosis"
            app:layout_constraintVertical_bias="0.066" />

        <EditText
            android:id="@+id/mitosis"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:ems="10"
            android:hint="Mitosis"
            android:inputType="number"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginRight="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/chromatin"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/Statistics"
            android:layout_width="377dp"
            android:layout_height="101dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="0dp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toTopOf="@+id/adhesion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.703" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="385dp"
            android:layout_height="37dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="8dp"
            android:max="100"
            app:layout_constraintBottom_toTopOf="@+id/thickness"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Statistics"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>
